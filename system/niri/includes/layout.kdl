layout {
    gaps 16

    border {
        off
    }

    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667 
    }

    default-column-width { proportion 0.5; }

    shadow {
        on
        softness 30
        spread 5
        offset x=0 y=5
        color "#0007"
    }

    struts {}
}
